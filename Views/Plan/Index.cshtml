<script>

    function filterBrands() {
        return {
            Brands: $("#Brands").val()
        };
    }

    function filterModels() {
        return {
            Models: $("#Models").val()
        };
    }


    function filterSubModel() {
        return {
            SubModels: $("#SubModels").val()
        };
    }

    function forgeryToken() {
        return kendo.antiForgeryTokens();
    }

</script>

